<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="OTATheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="InstallTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="VersionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">42.0px</item>
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Version" parent="@style/VersionTitle">
        <item name="android:textColor">#868686</item>
    </style>
    
    <style name="Tips" parent="@style/VersionTitle">
        <item name="android:textSize">36.0px</item>
        <item name="android:textColor">#b2b2b2</item>
    </style>

    <style name="ReleaseNote" parent="@style/VersionTitle">
        <item name="android:gravity">left|top</item>
        <item name="android:textSize">38.0px</item>
    </style>

    <style name="WarningText" parent="@style/VersionTitle">
        <item name="android:textColor">#fa555b</item>
        <item name="android:textSize">36.0px</item>
    </style>

</resources>